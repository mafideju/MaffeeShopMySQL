<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navi.ejs') %>

  <main>
    <% if (products.length > 0) { %>
    <div class="grid">
      <% for (let product of products) { %>
      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title">
            <%= product.title %>
          </h1>
        </header>
        <div class="card__image">
          <img src="<%= product.image %>" alt="A Book">
          <!-- <%= product.image %> -->
        </div>
        <div class="card__content">
          <h2 class="product__price">
            <%= product.price %>
          </h2>
          <p class="product__description">
            <%= product.description %>
          </p>
        </div>
        <div class="card__actions">
          <a href="/admin/edit-product/<%= product.id %>?edit=true" class="btn btn-link">Editar</a>
          <form action="/admin/delete-product" method="POST">
            <input type="hidden" value="<%= product.id %>" name="id">
            <button class="btn" type="submit">Deletar</button>
          </form>
        </div>
      </article>
      <% } %>
    </div>
    <% } else { %>
    <h1>NÃ£o Temos Produtos Listados !!!</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>