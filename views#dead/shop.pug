extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
      if products.length > 0
        div.grid
          each product in products
            article.card.product-item
              header.card__header
                  h1.product__title #{product.title}
              div.card__image
                  img(src="https://smartmobilestudio.com/wp-content/uploads/2012/06/leather-book-preview.png", alt="A Book")
              div.card__content
                  h2.product__price R$19.99
                  p.product__description Um Puta Livro sobre coisas importantes pra Caralho!
              div.card__actions
                  button.btn Por no Carrinho
      else 
        h1.product.title Opa! =)
          h3 NÃ£o temos nenhum produto listado!!! 